{
  "manifest_version": 3,
  "name": "Gherkin & Step Definition Generator",
  "version": "1.0",
  "description": "Generate Gherkin scenarios and Java step definitions for Selenium framework",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_icon": {
      "16": "images/tiger.png",
      "48": "images/tiger.png",
      "128": "images/tiger.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "images/tiger.png",
    "48": "images/tiger.png",
    "128": "images/tiger.png"
  }
}